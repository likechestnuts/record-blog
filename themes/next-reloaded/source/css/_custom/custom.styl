.post {
    margin-bottom: 30px;
    padding: 25px;
    -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
    -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

.header {
    margin-top: 40px;
}

// 行内代码样式
code {
    padding: 1px 4px;
    border: 1px solid #d6d6d6;
    border-radius: 4px;
    background: #f9f2f4;
    color: #c7254e;
    word-break: break-all;
}

// 大代码块的自定义样式
.highlight, pre {
    margin: 5px 0;
    padding: 5px;
    border-radius: 3px;
}

.highlight, code, pre {
    border: 1px solid #d6d6d6;
}
